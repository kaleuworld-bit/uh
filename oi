from docx import Document
from docx.shared import Pt, Cm, RGBColor
from docx.enum.text import WD_ALIGN_PARAGRAPH
from docx.oxml.ns import qn

def create_formatted_docx():
    doc = Document()

    # --- Configuração de Estilos (Global) ---
    # Acessa o estilo 'Normal' para aplicar as configurações base
    style = doc.styles['Normal']
    font = style.font
    p_format = style.paragraph_format

    # 1. Fonte e Tamanho
    # Tenta configurar American Typewriter Condensed, mas usa Courier New como fallback eficaz
    # Na prática, o Word usará Courier New se American Typewriter não estiver instalada na máquina do usuário.
    font.name = 'Courier New' 
    font.size = Pt(12)
    font.color.rgb = RGBColor(0, 0, 0) # Cor Preta RGB 0,0,0

    # Garante que o XML do documento defina a fonte corretamente para High ANSI e ASCII
    rPr = style.element.get_or_add_rPr()
    rFonts = rPr.get_or_add_rFonts()
    rFonts.set(qn('w:ascii'), 'Courier New')
    rFonts.set(qn('w:hAnsi'), 'Courier New')

    # 2. Parágrafo (Alinhamento, Recuo, Espaçamento)
    p_format.alignment = WD_ALIGN_PARAGRAPH.JUSTIFY
    p_format.first_line_indent = Cm(1.25)
    p_format.line_spacing = 1.5

    # --- Criação de Estilo para Títulos ---
    # Títulos centralizados e em negrito
    styles = doc.styles
    try:
        title_style = styles.add_style('CustomTitle', 1) # 1 = Paragraph Style
    except:
        title_style = styles['CustomTitle']
    
    title_font = title_style.font
    title_font.name = 'Courier New'
    title_font.size = Pt(14) # Um pouco maior para destaque
    title_font.bold = True
    title_font.color.rgb = RGBColor(0, 0, 0)
    
    title_format = title_style.paragraph_format
    title_format.alignment = WD_ALIGN_PARAGRAPH.CENTER
    title_format.line_spacing = 1.5
    title_format.space_after = Pt(12)

    # --- Conteúdo das Questões ---
    questions = [
        {
            "q": "1. A anemia é definida fundamentalmente pela redução da massa de hemoglobina. De acordo com a Organização Mundial da Saúde (OMS), qual é o critério diagnóstico de anemia para um homem adulto ao nível do mar?",
            "options": [
                "A) Hemoglobina < 12,0 g/dL",
                "B) Hemoglobina < 13,0 g/dL",
                "C) Hematócrito < 45%",
                "D) Hemoglobina < 11,0 g/dL",
                "E) Contagem de eritrócitos < 4,5 milhões/mm³"
            ],
            "answer": "B",
            "explanation": "A OMS define anemia em homens adultos como concentração de hemoglobina inferior a 13,0 g/dL. Para mulheres não grávidas é < 12,0 g/dL e gestantes/crianças < 11,0 g/dL."
        },
        {
