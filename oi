    # --- Escrita das Questões ---
    doc.add_paragraph("Simulado de Hematologia: Anemias, Doença Falciforme e Membranopatias", style='CustomTitle')
    
    for i, q in enumerate(questions):
        p_q = doc.add_paragraph(style='Normal')
        runner = p_q.add_run(q['q'])
        runner.bold = True
        
        for opt in q['options']:
            p_opt = doc.add_paragraph(opt, style='Normal')
            # Ajuste de recuo para opções
            p_opt.paragraph_format.left_indent = Cm(1.25)
            p_opt.paragraph_format.first_line_indent = Cm(0) # Remove recuo de primeira linha nas opções
        
        doc.add_paragraph("", style='Normal') # Espaço entre questões

    # --- Gabarito ---
    doc.add_page_break()
    doc.add_paragraph("Gabarito e Comentários", style='CustomTitle')

    for i, q in enumerate(questions):
        p_ans = doc.add_paragraph(style='Normal')
        run_num = p_ans.add_run(f"{i+1}. {q['answer']}")
        run_num.bold = True
        p_ans.add_run(f" - {q['explanation']}")

    # Salvar
    file_path = "Simulado_Hematologia_P1M18.docx"
    doc.save(file_path)
    return file_path

# Executa a criação
output_file = create_formatted_docx()
print(f"Arquivo criado: {output_file}")
